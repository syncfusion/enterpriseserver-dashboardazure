<html>
<head>
    <meta http-equiv='Content-Type' content='text/html; charset=utf-8'>
    <meta name='viewport' content='width=device-width'>
</head>
<body style='min-width: 100%;color: #222222;line-height: 19px;font-size: 14px;background-color: rgb(244,244,244);padding-top: 10px;padding-left:2px;padding-right:40px;padding-bottom:10px; width:100% !important;'>
    <center style='width: 100%; min-width: 580px;'>
        <table>
            <tbody>
                <tr>
                    <td style='word-break: break-word; hyphens: auto;color: #222222;'>
                        <table style='background: #5C6BC0;'>
                            <tbody>
                                <tr>
                                    <td style='word-break: break-word; hyphens: auto; padding-bottom: 10px; width: 584px; color: #2196F3;background: #5C6BC0;'>
                                        <table style='text-align:left;'>
                                            <tbody>
                                                <tr>
                                                    <td>
                                                        <p style='color: #ffffff; margin-top: 15px; margin-left: 535px; font-size: 10px;'>
                                                            @{
                                                                var formatedHyperlink = "<a href='" + @Model.BaseUrl + "//" + @Model.Language + "/accounts/login' style='color: #ffffff; font-size: 10px;font-family: Segoe UI, Helvetica, sans-serif; text-decoration: none;'>LOGIN</a>";
                                                            }
                                                            @formatedHyperlink
                                                        </p>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>
                                                        <p style='font-size: 16px;font-weight: 600; margin-left: 38px;font-family: Segoe UI, Helvetica, sans-serif; margin-top: 14px; color: #ffffff;'>
                                                            @Model.OrganizationName
                                                        </p>
                                                    </td>
                                                </tr>
                                                <tr><td style='padding-top: 11px;'><table style='width: 50px; color: #ffffff; border-top-color: #ffffff; height: 1px; margin-top: -1px; border-top-style: solid; border-top-width: 1px; margin-left: 38px;'><tr><td></td></tr></table></td></tr>
                                                @{
                                                    if (!Model.IsDataChanges)
                                                    {
                                                        <tr>
                                                            <td style='padding-top: 30px;'>
                                                                <p style='font-size: 28px;font-weight: lighter; color: #ffffff; margin-top: 11px; margin-left: 38px;font-family: Segoe UI, Helvetica, sans-serif; margin-bottom: 25px;'>
                                                                    Scheduled Dashboard
                                                                </p>
                                                            </td>
                                                        </tr>
                                                    }
                                                    else
                                                    {
                                                        <tr>
                                                            <td style='padding-top: 30px;'>
                                                                <p style='font-size: 28px;font-weight: lighter; color: #ffffff; margin-top: 11px; margin-left: 38px;font-family: Segoe UI, Helvetica, sans-serif; margin-bottom: 25px;'>
                                                                    Data Alert
                                                                </p>
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </td>
                                </tr>
                            </tbody>
                        </table><table>
                            <tbody>
                                <tr>
                                    <td style='word-break: break-word; hyphens: auto; color: #222222;  width: 584px; border-collapse: collapse !important; background: white;'>
                                        @{
                                            if (!Model.IsDataChanges)
                                            {
                                        <table style='text-align:left;'>
                                            <tr>
                                                <td>
                                                    <p style='font-family: Segoe UI, Helvetica, sans-serif;font-weight: 600; margin-bottom: 0px; margin-top: 28px; color: #353535; margin-left: 38px; font-size: 12px;'>
                                                        Hello
                                                        @Model.FullName
                                                        ,
                                                    </p>
                                                </td>
                                            </tr>
                                            <tr><td><p style='vertical-align: bottom; margin-top: 12px; color: #353535;  margin-left: 37px; margin-bottom: 12px;font-family: Segoe UI, Helvetica, sans-serif; font-size: 12px;margin-bottom:0px;'>Please find attached, the dashboard that you had requested.</p></td></tr>
                                        </table>
                                        <table style='text-align:left;'>
                                            <tr>
                                                <td>
                                                    <p style='margin-top: 17px;font-family: Segoe UI, Helvetica, sans-serif; margin-left: 38px;  color: #353535; font-size: 12px;'>
                                                        @{
                                                            var formatedHyperlinkofScheduledDashboard = "<a href='" + @Model.BaseUrl + "//" + @Model.Language + "/" + "dashboards" + "/" + @Model.CategoryName + "/" + @Model.ReportName + "' style='color: #0000FF; font-size: 12px; sans-serif; text-decoration: none;'> " + @Model.ReportName + "</a>";
                                                        }
                                                         Schedule-
                                                        @Model.ScheduleName  has exported the dashboard
                                                        @formatedHyperlinkofScheduledDashboard
                                                        .
                                                    </p>
                                                </td>
                                            </tr>
                                        </table>
                                        <table style='text-align:left;'>
                                            <tr><td><p style='margin-top: 17px; margin-bottom:0px; margin-left: 38px;  color: #353535; font-size: 12px;'>Regards,</p></td></tr>
                                            <tr>
                                                <td>
                                                    <p style='margin-bottom: 64px; font-family: Segoe UI, Helvetica, sans-serif;margin-left: 38px; color: #353535;font-size: 12px;'>
                                                        @Model.OrganizationName
                                                    </p>
                                                </td>
                                            </tr>
                                        </table>
                                            }
                                            else
                                            {
                                                <table style='text-align:left;'>
                                                    <tr>
                                                        <td>
                                                            <table style='border-spacing: 0px; width: 300px; margin-left: 38px;'>
                                                                <tr>
                                                                    <td style='width: 290px; height: 25px;font-size: 12px; word-break: break-word;'>
                                                                        <p style='color: #353535;font-size: 12px;font-family: Segoe UI, Helvetica, sans-serif; width: 280px;word-break: break-word;'>
                                                                            @Model.AlertHtmlMessage
                                                                        </p>
                                                                    </td>
                                                                </tr>
                                                            </table>
                                                        </td>
                                                    </tr>
                                                </table>
                                            }
}
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </td>
                </tr>
            </tbody>
        </table>
    </center>
</body>
</html>