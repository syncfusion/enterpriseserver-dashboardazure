@{
    ViewBag.Title = @GlobalAppSettings.SystemSettings.OrganizationName + " - [[[Permission Denied]]]";
    ViewBag.MessageBox = false;
}

@if (Layout == null)
{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section scripts{
    @Scripts.Render("~/scripts/bootstrap-errorpage")
<script>
    if (parent.slideObj != undefined) {       
        parent.slideObj._autoPlay();
    }
    </script>
}

@section MainSection{
    <div>
        <div class="col-md-12">
            <div class="col-xs-12 text-center" style="margin-top: 60px ; font-size: 30px">[[[You do not have permission to view this page.]]]</div>
        </div>
    </div>
}