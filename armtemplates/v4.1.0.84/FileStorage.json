{
  "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "AppServiceName": {
      "type": "string"
    },
    "AppServicePlanLocation": {
      "type": "string"
    },
    "AppServicePlanResourceGroup": {
      "type": "string"
    },
    "AppServiceType": {
      "type": "string",
      "allowedValues": [
        "DS",
        "UMS"
      ],
      "metadata": {
        "description": "AppService to be deployed"
      },
      "defaultValue": "DS"
    },
    "BlobStorageAccountType": {
      "type": "string",
      "defaultValue": "Standard_LRS",
      "allowedValues": [
        "Standard_LRS",
        "Standard_ZRS",
        "Standard_GRS",
        "Standard_RAGRS",
        "Premium_LRS"
      ]
    },
    "BlobStorageName": {
      "maxLength": 24,
      "minLength": 3,
      "type": "string",
      "metadata": {
        "description": "Storage account name for Dashboard Server. The name must be between 3 to 24 characters long, and can contain only numbers and lowercase letters."
      }
    },
    "deploySiteSettings": {
      "type": "object"
    },
    "GithubURL": {
      "type": "string"
    },
    "ReleaseVersion": {
      "type": "string"
    },
    "StorageType": {
      "type": "string",
      "allowedValues": [
        "FileStorage",
        "AzureBlobStorage"
      ],
      "metadata": {
        "description": "Choose a storage type for storing files the dashboard server generates. A complete list of files generated by the dashboard server can be viewed <a target='_blank' href='https://help.syncfusion.com/dashboard-platform/dashboard-server/faq#what-all-are-the-files-and-folders-will-be-generated-in-the-installed-machine'>here</a>."
      },
      "defaultValue": "FileStorage"
    }
  },
  "resources": [
    {
      "name": "[parameters('AppServiceName')]",
      "type": "Microsoft.Web/sites",
      "location": "[parameters('AppServicePlanLocation')]",
      "apiVersion": "2015-08-01",
      "dependsOn": [],
      "tags": {
        "[concat('hidden-related:', resourceId(parameters('AppServicePlanResourceGroup'), 'Microsoft.Web/serverfarms', 'SyncfusionAppSvcPlan'))]": "Resource",
        "displayName": "AppService"
      },
      "properties": {
        "name": "[parameters('AppServiceName')]",
        "serverFarmId": "[resourceId(parameters('AppServicePlanResourceGroup'), 'Microsoft.Web/serverfarms', 'SyncfusionAppSvcPlan')]"
      },
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "condition": "[equals(parameters('StorageType'), 'FileStorage')]",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('AppServiceName'))]",
            "web"
          ],
          "name": "appsettings",
          "properties": {
            "IsAzureApplication": "true",
            "log4net.Config": "logs\\log4net.config",
            "StorageType": "FileStorage"
          },
          "tags": {
            "displayName": "FileAppSetting"
          },
          "type": "config"
        },
        {
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/Sites', parameters('AppServiceName'))]"
          ],
          "name": "web",
          "properties": {
            "RepoUrl": "[parameters('GithubURL')]",
            "branch": "[parameters('ReleaseVersion')]",
            "IsManualIntegration": true
          },
          "type": "sourcecontrols"
        },
        {
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[resourceId('Microsoft.Web/sites', parameters('AppServiceName'))]"
          ],
          "name": "web",
          "properties": "[parameters('deploySiteSettings')]",
          "tags": {
            "displayName": "Configuration"
          },
          "type": "config"
        }
      ]
    }
  ]
}
